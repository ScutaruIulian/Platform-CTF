@{
    ViewBag.Title = "Register";
}
@model Platform_CTF.Models.UserRegister
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Register</title>
    <link href="~/Content/Site.css" rel="stylesheet"/>
</head>
<body>
<div class="register">
    <h2>Register</h2>

    @using (Html.BeginForm("Login", "Register", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Username</label>
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        
        </div>
        <div>
            <label>Password</label>
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", name = "password", type = "password" })
        </div>
        <div>
            <label>Confirm Password</label>
            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", name = "confirmPassword", type = "password" })
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    }
</div>
</body>
</html>