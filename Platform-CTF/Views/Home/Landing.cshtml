@{
    ViewBag.Title = "";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title - QWERTY CTF Home Page</title>
    <link rel="stylesheet" href="~/Content/Globalstyle.css">
</head>

<body>
<div class="sidebar" id="mySidebar">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="#">Scoreboard</a>
    <a href="#">Regulament</a>
    <a href="#">Challanges</a>
</div>

<button class="openbtn" onclick="toggleNav()">☰ Menu</button>

<div class="home">
    <h2>@ViewBag.Title QWERTY CTF Home Page</h2>
    <div class="auth">
        <form action="@Url.Action("Login", "Login")" method="get">
            <button type="submit">Login</button>
        </form>
        <form action="@Url.Action("Register", "Register")" method="get">
            <button type="submit">Register</button>
        </form>
    </div>
</div>

<script>
    function toggleNav() {
        var sidebar = document.getElementById("mySidebar");
        var openbtn = document.getElementsByClassName("openbtn")[0];
        if (sidebar.style.width === "250px") {
            closeNav();
            openbtn.style.marginLeft = "0";
        } else {
            openNav();
            openbtn.style.marginLeft = "250px";
        }
    }

    function openNav() {
        document.getElementById("mySidebar").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidebar").style.width = "0";
    }
</script>
</body>

</html>